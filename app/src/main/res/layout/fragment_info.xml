<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResAna"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/vert_logo">

        <ImageButton
            android:id="@+id/imageButton_info"
            android:contentDescription="Go to information fragment"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/vert_logo"
            android:layout_gravity="center"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <TextView
            android:id="@+id/application_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/vert_logo"
            android:gravity="center"
            android:text="@string/app_version"
            android:textColor="@color/white"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/vert_logo"
        android:gravity="center"
        android:paddingHorizontal="1dp"
        android:paddingVertical="1dp"
        android:text="Informations"
        android:textColor="@color/white"
        android:textSize="45sp"
        tools:ignore="TextContrastCheck" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/What"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="1dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@color/jaune_logo"
                android:gravity="center"
                android:text="@string/What" />

            <TextView
                android:id="@+id/Why"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@color/jaune_logo"
                android:gravity="center"
                android:text="@string/Why" />

            <TextView
                android:id="@+id/Who"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@color/jaune_logo"
                android:gravity="center"
                android:text="@string/Who" />
            <TextView
                android:id="@+id/When"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@color/jaune_logo"
                android:gravity="center"
                android:text="@string/When" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>